<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yichen.mmq.ui.activities.SearchActivity">
    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/iv_search_back"
            android:src="@drawable/top_live_back"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:background="@drawable/top_search_editext"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_top_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.AppCompatEditText
                android:singleLine="true"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:id="@+id/at_text"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:background="@null"
                android:theme="@null"
                android:hint="请输入主播昵称或者房间号"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:visibility="gone"
                android:src="@drawable/btn_nav_close"
                android:id="@+id/iv_edit_clear"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
            <TextView
                android:id="@+id/tv_search"
                android:clickable="true"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:text="搜索"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>
